<% layout('../_common/layouts/general') %>
<%
    title='{{Sign In}}';
%>          
    <style type="text/css">
        body{
            background-color: #007bff!important;
        }
        footer.footer {
          padding-top: 3rem;
          padding-bottom: 4rem;
          background-color: #007bff;
        }

        footer.footer a{
          color:#f8f9fa;
        }
        footer.footer li{
          color:#f8f9fa;
        }
    </style>
    <nav class="navbar static-top">
        <div class="container">
            <div class="float-left" style="width: 50%;">
                <a href="/" class="mb-4"><img src="<%- assetVersion('/img/logo-white.png') %>" style="max-width: 100%; max-height: 40px;"></a>
            </div>
            
        </div>
    </nav>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><div class="text-center login-title text-primary"><i class="fas fa-sign-in-alt mr-1"></i> {{Sign In}}</div></div>
                    <div class="card-body">
                        <form action="" method="POST" role="form" name="form1" id="form1" autocomplete="off">
                            <div class="form-group">
                                <label class="small mb-1" for="inputEmailAddress">{{Telephone or email}}</label>
                                <input class="form-control" id="inputEmailAddress" type="email" placeholder="{{Enter your phone number or email}}" />
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" for="inputPassword">{{Password}}</label>
                                <input class="form-control" id="inputPassword" type="password" placeholder="{{Enter password}}" />
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                    <label class="custom-control-label" for="rememberPasswordCheck">{{Remember password}}</label>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" href="password.html">{{Forgot Password?}}</a>
                                <input class="btn btn-primary" type="submit" value="{{Sign In}}">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <div class="small"><a href="/login/signup">{{Sign up!}}</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- indent(partial('../_common/layouts/footer'),4) %>