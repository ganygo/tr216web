<% layout('../_common/layouts/general') %>
<%
	if(typeof title=='undefined') title='Home';
	if(typeof metaDescription=='undefined') metaDescription='Meta aciklamasi';
	if(typeof metaAuthor=='undefined') metaAuthor='Meta author';

	if(typeof parentCategory!='undefined') title=parentCategory.text;
%>
	<nav class="navbar static-top">
        <div class="container">
            <div class="float-left" style="width: 50%;">
            	<% if(typeof parentCategory!='undefined'){ %>
                	<a href="/" class="mb-4"><img src="<%- assetVersion('/img/logo.png') %>" style="max-width: 100%; max-height: 40px;"></a>
                <% } %>
            </div>
            <div class="text-right" style="width: 50%;">
            <a class="btn btn-success btn-sm" href="/login"><i class="fas fa-sign-in-alt mr-1"></i> {{Sign In}}</a>
            </div>
        </div>
    </nav>
    <header class="masthead text-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto main-brand py-3">
                	<% if(typeof parentCategory=='undefined'){ %>
                    <a href="/" class="mb-5 text-primary"><img src="<%- assetVersion('/img/logo.png')%>" style="max-width: 60%;"></a>
                    <% }else{ %> 
                    <div class="search-title text-primary"><i class="<%- parentCategory.icon %> mr-2 text-success"></i> <%- parentCategory.text %></div>
                    <% } %>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto text-center">
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="{{ara...}}" aria-label="{{ara...}}" aria-describedby="search-button">
                      <div class="input-group-append">
                        <a class="btn btn-primary text-white" id="search-button" href="/"><i class="fas fa-search"></i></a>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <% if(Array.isArray(currentCategory)){ %> 
    <categories class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
            	<% currentCategory.forEach((e)=>{ %> 
                <div class="col-6 col-md-3">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon">
                            <a href="<%- e.path %>">
                                <i class="<%- e.icon %> m-auto text-primary"></i>
                            </a>
                        </div>
                        <h3><%- e.text %></h3>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </categories>
    <% } %>
<%- indent(partial('../_common/layouts/footer'),4) %>