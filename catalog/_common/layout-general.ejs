<%
    if(typeof hideLeftTopLogo=='undefined') hideLeftTopLogo=false;
    if(typeof title=='undefined') title='tr216.com';

%>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>tr216 - <%=title%></title>

    <link href="/css/fontawesome.v5.8.2.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    
    
    
    <link href="/css/theme.css" rel="stylesheet">

    <script type="text/javascript" src="/js/jquery.v3.4.1.min.js"></script>
    
    
    <link type="text/css" rel="stylesheet" href="/css/bootstrap-datepicker3.min.css" />
    <link type="text/css" rel="stylesheet" href="/css/jquery-ui.min.css" />
    <script type="text/javascript" src="/js/jquery-ui.min.js"></script>

    <!-- <link href="/datatables/datatables.min.css" rel="stylesheet"> -->

    <link href="/css/style.css" rel="stylesheet">
</head>
<!-- <body class="grid-back"> -->
<body class="">
    <!-- <div class="grid-lines"> -->
    <div class="">
        <div class="row my-3 mx-2">
            <div class="col-6">
                <% if(hideLeftTopLogo!=true) { %>
                <a href="/?sid=<%=sid%>"> <img src="/images/tr216-logo.png" style="max-height: 50px;max-width: 100%;"></a>
                <% } %>
            </div>
            <div class="col-6 text-right pt-1">
                <% if(username==''){ %>
                <a href="/login" target="_self" class="login-button mt-1"><i class="fas fa-user-lock"></i> giriş/kayıt </a>
                <% } else { %>
                <a href="/me?sid=<%=sid%>" target="_self" class="login-button mt-1"><i class="fas fa-user"></i> <%=(name + ' ' + lastName) %> </a>
                <% } %>
            </div>
        </div>
        <div class="container">
            
            <%- body %>
            <!-- <a class="copyright" href=""><span>shamanCoders()</span></a> -->

        </div>
    </div>


    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cikmak istiyor musunuz?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Vazgec</button>
                    <a class="btn btn-primary" href="/logout?sid=<%=sid%>">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/js/bootstrap.bundle.v4.3.1.min.js"></script>
    <script type="text/javascript" src="/js/jquery.easing.v1.4.1.min.js"></script>


    <script type="text/javascript" src="/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap-datepicker-locales/bootstrap-datepicker.tr.min.js"></script>
    <script type="text/javascript" src="/datatables/datatables.min.js"></script>

</body>
</html>